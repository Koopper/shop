<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Entity.Product" table="products" schema="public" catalog="Shop">
        <id name="idPr">
            <column name="id_pr" sql-type="integer"/>
        </id>
        <property name="namePr">
            <column name="name_pr" sql-type="text" not-null="true"/>
        </property>
        <property name="descPr">
            <column name="desc_pr" sql-type="text" not-null="true"/>
        </property>
        <property name="price">
            <column name="price" sql-type="real" precision="-1" not-null="true"/>
        </property>
        <property name="stock">
            <column name="stock" sql-type="integer" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>